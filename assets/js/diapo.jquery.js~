
(function($)
{

	$.fn.diapo = function(opts)
	{

		var settings = $.extend({
			'first': 0
		},opts);
		
		var me = $(this);
				


		var formOK = function()
		{
			var a = me
				.find('fieldset:visible')
				.find('input[type="text"],input[type="email"],textarea,select')
				.not('.new')
				.serializeArray();

			for( var i=0 ; i<a.length ; i++ )
			{
				if( a[i].value == "" )
				{
					alert('Veuillez remplir tous les champs.');
					return false;
				}
			}
			return true;
		}
				

		
		//-- add the goPrev button
		
		var goPrev = function()
		{
			$(me).find('fieldset').hide(),
			$(this).parents('fieldset').prev('fieldset').show();
		}

		$(this)
			.find('fieldset .prev')
			.on('click',goPrev);


		
		//-- add the goNext button
		
		var goNext = function()
		{
			if( formOK() )
			{
				$(me).find('fieldset').hide(),
				$(this).parents('fieldset').next('fieldset').show();
			}
		}

		$(this)
			.find('fieldset .next')
			.on('click',goNext);


		
		//-- register the complete form
		
		var register = function()
		{
			if( formOK() )
			{
				var data = me
					.find('input,textarea,select')
					.not('.new')
					.serializeArray();
					
				console.log( data );
				
				$.post( ROOT + 'manage/save', data, function(e)
				{
					alert( e );
				});
			}
		}

		$(this)
			.find('fieldset .save')
			.one('click',register);



		//-- hide all and show the first

		$(this)
			.children('fieldset')
			.hide()
			.eq( settings.first )
			.show();
		
		
		return this;
	};

})(jQuery);