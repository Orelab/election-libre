<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');


class Candidate_model extends CI_Model
{
	
	
	function __construct()
	{
		parent::__construct();
	}



	    
	public function blablabla()
	{
		$this->load->helper('generator');
		
		$data = array(
			'email'				=> $this->input->post('email', true),
			'login'				=> $login,
			'password'			=> sha1( $plaintext ),
			'name'				=> $this->input->post('name', true),
			'surname'				=> $this->input->post('surname', true),
			'business'			=> $this->input->post('business', true),
			'address'				=> $this->input->post('address', true),
			'phone'				=> $this->input->post('phone', true),
			'siret'				=> $this->input->post('siret', true),
			'tva'				=> $this->input->post('tva', true),
			'confirmation_string'	=> random_key(50),
			'confirmed'			=> false
		);
		
		return ( $this->db->insert('user',$data) ? array('login'=>$login,'pass'=>$plaintext) : false );
	}
	

}






       